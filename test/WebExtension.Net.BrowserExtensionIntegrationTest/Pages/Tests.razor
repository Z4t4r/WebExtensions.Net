@page "/tests.html"
@using WebExtension.Net.BrowserExtensionIntegrationTest.Infrastructure
@inherits Blazor.BrowserExtension.Pages.BasePage

@code {
    [Inject]
    public ITestRunner TestRunner { get; set; }

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);
        var coverlet = Navigation.Uri.Contains("coverlet");
        base.OnAfterRender(firstRender);
        if (firstRender)
        {
            await TestRunner.RunTests();
            if (coverlet)
            {
                await TestRunner.GetTestCoverageInfo();
            }
        }
    }
}
