<!-- build/WebExtension.Net.targets -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <WebExtensionAssetsContentsPath>$(MSBuildThisFileDirectory)..\content\WebExtensionScripts</WebExtensionAssetsContentsPath>
    <WebExtensionAssetsTargetPath>$(WebExtensionAssetsPath)\WebExtensionScripts</WebExtensionAssetsTargetPath>
  </PropertyGroup>

  <ItemGroup Condition="'$(IncludeWebExtensionAssets)' == 'true'">
    <None Include="$(WebExtensionAssetsContentsPath)\**\*.*" Link="$(WebExtensionAssetsTargetPath)\%(RecursiveDir)%(Filename)%(Extension)">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>