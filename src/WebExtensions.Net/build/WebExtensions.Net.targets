<!-- build/WebExtensions.Net.targets -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <WebExtensionsAssetsContentsPath>$(MSBuildThisFileDirectory)..\content\WebExtensionsScripts</WebExtensionsAssetsContentsPath>
    <WebExtensionsAssetsTargetPath>$(WebExtensionsAssetsPath)\WebExtensionsScripts</WebExtensionsAssetsTargetPath>
  </PropertyGroup>

  <ItemGroup Condition="'$(IncludeWebExtensionsAssets)' == 'true'">
    <None Include="$(WebExtensionsAssetsContentsPath)\**\*.*" Link="$(WebExtensionsAssetsTargetPath)\%(RecursiveDir)%(Filename)%(Extension)">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>